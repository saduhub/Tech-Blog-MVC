<div class="login-container bg-black opacity-90 rounded mt-4 p-2">
    <h2 class="text-indigo-100 text-center mb-12 text-3xl font-bold">Login</h2>
    <form id="login-form" class="grid grid-cols-1 gap-4">
        <div>
            <label class="block text-indigo-100 text-center" for="username">Username:</label>
            <input type="text" id="username" class="w-full h-10 rounded bg-gray-200 mx-auto" placeholder="Username" />
        </div>
        <div>
            <label class="block text-indigo-100 text-center" for="password">Password:</label>
            <input type="text" id="password" class="w-full h-10 rounded bg-gray-200 mx-auto" placeholder="Password" />
        </div>
        <div>
            <button type="submit" class="w-44 h-10 mt-4 bg-indigo-300 hover:bg-indigo-700 font-bold py-2 px-4 mx-auto rounded">Login</button>
        </div>
    </form>
    <div id="error-modal" class="modal">
        <div class="modal-content">
            <span class="close-button">x</span>
            <p id="error-message"></p>
        </div>
    </div>
</div>

<script src="/js/authHandlers.js"></script>
<script src="/js/modals.js"></script>