{{#if signedUp}}
    <!-- Login Form -->
    <div id="loginForm" class="bg-black opacity-90 rounded mt-4 p-2">
        <form class="grid grid-cols-1 gap-4">
            <h3 class="text-indigo-100 text-center mb-12 text-3xl font-bold">Log In</h3>
            <label class="block text-indigo-100 text-center" for="username">Username</label>
            <input id="username" class="w-240 h-70 rounded bg-gray-200 mx-auto" type="text" placeholder="             Username"/>
            <label class="block text-indigo-100 text-center" for="password">Password</label>
            <input id="password" class="w-240 h-70 rounded bg-gray-200 mx-auto" type="text" placeholder="             Password"/>
            <button id="loginQuery" class="w-44 h-70 mb-2 mt-2 bg-indigo-300 hover:bg-indigo-700 font-bold py-2 px-4 mx-auto rounded">Log In</button> 
            <button id="signupButton" class="w-44 h-70 mb-12 bg-indigo-300 hover:bg-indigo-700 font-bold py-2 px-4 mx-auto rounded">Sign Up</button> 
        </form>
    </div>
{{else}}
    <!-- Sign Up Form -->
    <div id="signup-form" class="bg-black opacity-90 rounded mt-4 p-2">
        <form class="grid grid-cols-1 gap-4">
            <h3 class="text-indigo-100 text-center mb-12 text-3xl font-bold">Sign Up</h3>
            <label class="block text-indigo-100 text-center" for="username">Username</label>
            <input id="username" class="w-240 h-70 rounded bg-gray-200 mx-auto" type="text" placeholder="             Username"/>
            <label class="block text-indigo-100 text-center" for="password">Password</label>
            <input id="password" class="w-240 h-70 rounded bg-gray-200 mx-auto" type="text" placeholder="             Password"/>
            <button id="signupQuery" class="w-44 h-70 mb-2 mt-2 bg-indigo-300 hover:bg-indigo-700 font-bold py-2 px-4 mx-auto rounded">Sign Up</button> 
            <button id="loginButton" class="w-44 h-70 mb-12 bg-indigo-300 hover:bg-indigo-700 font-bold py-2 px-4 mx-auto rounded">Log In</button> 
        </form>
    </div>
{{/if}}